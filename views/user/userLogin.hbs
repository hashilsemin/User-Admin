<section>
    <div class="container">
        <div class="row">
            <div class="userlogin col-md-6 col-12">
            <form action="/login" id="login" method="POST">
                 <h1 style="font-family: 'Ubuntu', sans-serif;">User Login</h1>
                <div class="form-group">
                    <label>Email address</label>
                    <input type="email" name="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                   {{#if error}}<small id="emailHelp" style="color: red;">Wrong password or email</small>{{/if}}
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" name="password" id="exampleInputPassword1">
                       {{#if errorPass}}<small id="emailHelp" style="color: red;">Your password is wrong</small>{{/if}}
                </div>
             
                <a href="/signup">Create a new account?</a>
                <button type="submit" class="btn float-right btn-primary">Log In</button>
                  
            </form>
            </div>
        </div>
    </div>
</section>
